{
  "manifest_version": 2,
  "name": "Plex Pace",
  "version": "1.0",

  "description": "",
  "homepage_url": "https://github.com/Good-Will-Coding/Plex-Pace",
  "icons": {
    "48": "icons/plex-pace-icon.png"
  },
  "permissions": ["activeTab", "storage", "tab"],
  "browser_action": {
    "default_icon": "icons/plex-pace-icon.png",
    "default_title": "Plex Pace",
    "default_popup": "popup/select_speed.html"
  },
  "content_scripts": [
    {
      "matches": ["*://app.plex.tv//*"],
      "js": ["popup/select_speed.js"]
    }
  ],
  "background": {
    "scripts": ["popup/select_speed.js"]
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Alt+Shift+Left",
        "linux": "Ctrl+Shift+Left"
      },
      "description": "Send a 'toggle-feature' event to the extension"
    },
    "do-another-thing": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}


